{
    "name": "alexjustesen/laravel-placehold-image",
    "description": "A Laravel package to generate placeholder images from placehold.co",
    "keywords": [
        "laravel",
        "placeholder",
        "image",
        "placehold"
    ],
    "homepage": "https://github.com/alexjustesen/laravel-placehold-image",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Justesen",
            "email": "alex@alexjustesen.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "AlexJustesen\\LaravelPlaceholdImage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlexJustesen\\LaravelPlaceholdImage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-placehold-image --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/pint"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlexJustesen\\LaravelPlaceholdImage\\LaravelPlaceholdImageServiceProvider"
            ],
            "aliases": {
                "PlaceholdImage": "AlexJustesen\\LaravelPlaceholdImage\\Facades\\PlaceholdImage"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}